extends layout.pug

block content
    h2.page-header Login
    p Please login below
    form(method="post" action="/users/login")
        .form-group
        label Username
        input.form-control(type="text" name="username" placeholder="enter username")
        label Password
        input.form-control(type="text" name="password" placeholder="enter password")
        input.btn.btn-primary(type="submit" name="submit" value="Login")